pipeline {
    // master executor should be set to 0
    agent any
    stages {
        stage('Build Jar') {
            steps {
                //bat
                sh "mvn clean package -DskipTests"
            }
        }
        stage('Build Image') {
            steps {
                //bat
                sh "docker build -t='bhagyan/selenium-docker' ."
            }
        }
        stage('Push Image') {
            steps {
			    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'Browny1992', usernameVariable: 'bhagyan')]) {
                    //bat
			        sh "docker login --username=$bhagyan --password=$Browny1992"
			        sh "docker push  bhagyan/selenium-docker:latest"
			    }                           
            }
        }
    }
}